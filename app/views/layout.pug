doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width')
		title= title
		link(rel='apple-touch-icon', href='/favicon/apple-touch-icon.png')
		link(rel='icon', sizes='32x32', type='image/png', href='/favicon/favicon.png')
		link(rel='stylesheet', href='/css/style.css')
		block css
	body
		#app
			.menuleft 
				ul.list-group
					li.list-group-item.active
						a.list-group-item-action(href="/") 
							img(src="./img/favicon.png", alt="")
					li.list-group-item 
						a.list-group-item-action(href="/login") 
							i.fa.fa-key
					li.list-group-item 
						a.list-group-item-action(href="/products") 
							i.fa.fa-shopping-cart
					li.list-group-item
						a.list-group-item-action(href="/database") 
							i.fa.fa-database
				ul.list-group
					li.list-group-item 
						a.list-group-item-action(href="/settings") 
							i.fa.fa-cog
			.menuright
				ul.nav.justify-content-between.align-items-center
					li.nav-item
						h3 NETA Vietnam
					li.nav-item.dropdown
						a.nav-link.pr-0(href="#", id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
							span.name.mr-2 Guest
							img(src="./img/favicon.png", alt="")
						.dropdown-menu.dropdown-menu-right(aria-labelledby="navbarDropdown")
							a#info.dropdown-item(href='javascript:void(0)', onclick="getInfoUser()") Thông tin
							a#logout.dropdown-item(href='javascript:void(0);' onclick="logOut()") Đăng xuất
		
				#maincontent 
					block content
		script(src='/js/plugins.js', type="text/javascript")
		script(src='/js/main.js', type="text/javascript")
		block js
